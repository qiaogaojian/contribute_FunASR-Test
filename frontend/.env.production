# 生产环境配置
NODE_ENV=production

# 应用配置
VITE_APP_TITLE=FunASR 会议助手
VITE_APP_DESCRIPTION=基于 FunASR 的智能会议转录助手
VITE_APP_VERSION=1.0.0

# API 配置 (生产环境需要修改为实际的服务器地址)
VITE_API_BASE_URL=https://your-api-domain.com
VITE_WS_BASE_URL=wss://your-api-domain.com

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_HOT_RELOAD=false
VITE_ENABLE_SOURCE_MAP=false

# 开发工具
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_CONSOLE_LOG=false
VITE_LOG_LEVEL=error

# 音频配置
VITE_AUDIO_SAMPLE_RATE=16000
VITE_AUDIO_CHANNELS=1
VITE_AUDIO_CHUNK_SIZE=1024
VITE_AUDIO_BUFFER_SIZE=4096

# 转录配置
VITE_DEFAULT_LANGUAGE=zh
VITE_SUPPORTED_LANGUAGES=zh,en,ja,ko
VITE_TRANSCRIPTION_TIMEOUT=30000

# WebSocket 配置
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=3
VITE_WS_HEARTBEAT_INTERVAL=60000

# 文件上传配置
VITE_MAX_FILE_SIZE=100
VITE_ALLOWED_FILE_TYPES=.mp3,.wav,.m4a,.flac,.aac
VITE_UPLOAD_CHUNK_SIZE=1024

# 会议配置
VITE_MAX_MEETING_DURATION=7200
VITE_MAX_PARTICIPANTS=50
VITE_AUTO_SAVE_INTERVAL=60
VITE_MEETING_TIMEOUT=300000

# 主题配置
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE_UI=zh-CN

# 性能配置
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# 安全配置
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true